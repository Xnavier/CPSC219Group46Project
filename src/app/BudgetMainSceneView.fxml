<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox prefHeight="2000" prefWidth="1000" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.BudgetCalculatorController">
   <children>
   <HBox>
      <children>
      <Label fx:id="newDirections" text="Welcome to our Budget Calculator. Please use the following buttons to get your budget.">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="10.0" />
               </font>
            </Label>
      </children>
   
   
   </HBox>
 
      
      <HBox prefHeight="200.0" prefWidth="200.0">
      <children>

      	<Label fx:id="incomeSceneBaitLabel" text="Calculate your income">
      	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
      	</Label>
      	<Button fx:id="incomeBaitButton" mnemonicParsing="false" onAction="#getIncome" text="Income" textFill="GREEN">
      	   	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
      	</Button>
   <Label fx:id="incomeLabel" text="">
      	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
      	</Label>
      	</children>
      	</HBox>
      <HBox prefHeight="200.0" prefWidth="200.0">
         <children>

            <Label fx:id="expenseLabel" text="Enter your Expenses">
        	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
                </Label>
            <Button fx:id="getExpensesButton" mnemonicParsing="false" onAction="#getExpense" text="Expenses" textFill="#f50808">
            <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Impact" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      
      <HBox prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label fx:id="savingsLabel" text="Enter your savings">
             <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
           
            <Button fx:id="getSavingsSceneLabel" mnemonicParsing="false" onAction="#getSavings" text="Savings" textFill="TEAL">
               	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox prefHeight = "200.0" prefWidth="200.0">
      <Label fx:id ="dateLabel" text = "Start Date to budget"/>
      <TextField fx:id = "startDateField"/>
      <Label fx:id ="dateLabel2" text = "End Date"/>
      <TextField fx:id = "endDateField"/>
       </HBox>
      <HBox prefHeight="200.0" prefWidth="200.0">
      	<children>
      	<Label fx:id="budgetLabel" text="Calculate your budget">
      	   	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="24.0" />
               </font>
        </Label>
        
      	<Button fx:id="getBudgetButton" mnemonicParsing = "false" onAction = "#getFinal" text="Calculate" textFill="BLUEVIOLET">
      	   	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="60.0" top="10.0" />
                </HBox.margin>
               <font>
                  <Font name="System Bold Italic" size="28.0" />
               </font>
      	</Button>
        <Label fx:id = "budgetLabel2" text = ""/>
      	</children>
      	
      
      </HBox>
   </children>
</VBox>
